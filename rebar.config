{minimum_otp_vsn, "20"}.

{erl_opts, [debug_info,
            report,
            verbose,
            warn_deprecated_function,
            warn_deprecated_type,
            warn_export_all,
            warn_export_vars,
            warn_obsolete_guard,
            warn_untyped_record,
            warn_unused_import]}.

{lib_dirs, ["deps"]}.

{deps, [yamerl]}.

{profiles, [
    {developer, [
        {deps, [unite]},
        {eunit_opts, [no_tty, {report, {unite_compact, []}}]}
    ]}
]}.

{cover_enabled, true}.

{cover_opts, [verbose]}.
